  <!-- 公開課程 區塊 -->
  <section class="py-7 bg-primary-100">
    <div class="container">
      <h2 class="title-deco py-7 py-md-9 text-center text-primary-700 tracking-wide fw-semibold">公開課程</h2>
      <ul class="row row-gap-7 mb-6 mb-md-7 list-unstyled">
        <% for (const collectionKey in site.data.collections) { %>
          <% const collection = site.data.collections[collectionKey] %>
          <li class="col-12 col-md-6 mb-2 mb-md-7">
            <!-- 課程卡片 區塊 -->
            <div class="card bg-transparent border-0">
              <button
                data-bs-toggle="modal"
                data-bs-target="#collectionModal-<%= collection.id %>"
                class="bg-transparent border-0"
                type="button"
              >
                <img
                  src="<%= url_for('/images/work-image' + collection.id + '.png') %>"
                  class="card-img-top rounded-4"
                  alt="work-<%=collection.id %>"
                >
              </button>
              <div class="card-body pb-0">
                <h3 class="card-title text-primary-700">
                  <%= collection.name %>
                </h3>
                <p class="card-text mb-3 mb-md-4 text-primary-500">
                  <%= collection.description %>
                </p>
                <div class="d-flex gap-3">
                  <% for (const tagKey in collection.tags) { %>
                    <% const tag = collection.tags[tagKey] %>
                    <span class="badge fs-6 lh-base fw-normal text-primary-700 bg-primary-200 rounded-4">
                      <%= tag %>
                    </span>
                  <% } %>
                </div>
              </div>
            </div>
            <!-- modal 區塊 -->
            <div class="modal" id="collectionModal-<%= collection.id %>" tabindex="-1" aria-labelledby="modal-<%= collection.id %>" aria-hidden="true">
              <div class="modal-dialog modal-dialog-centered" style="--bs-modal-width: 1076px;">
                <div class="modal-content rounded-4">
                  <div class="modal-header pt-6 pb-0 px-6 px-md-7 mb-4 mb-md-7 border-0">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="px-6 px-md-9">
                    
                    <h3 class="modal-title mb-2 text-primary-700 text-center"><%= collection.name %></h3>
                    <p class="mb-4 mb-md-7 text-primary-500 text-center"><%= collection.description %></p>
                    <div class="row row-gap-4 justify-content-center justify-content-md-between align-items-center mb-4 mb-md-7">
                      <div class="col-12 col-md-5 col-lg-7 text-primary-800">
                        <!-- <p class="mb-0">這是關於「<%= collection.name %>」的更多細節介紹。</p> -->
                        <!-- <p class="mb-0">您可以根據需要填入更多說明文字或課程重點。</p> -->
                        <% if (collection.outline && collection.outline.length > 0) { %>
                          <h4 class="text-primary-600 mt-5 mb-3">課程大綱</h4>
                          <ul class="list-unstyled text-primary-700">
                            <% collection.outline.forEach(function(item) { %>
                              <li class="mb-2">• <%= item %></li>
                            <% }) %>
                          </ul>
                        <% } %>
                      </div>
                      <div class="divider col-12 col-md-5 w-auto text-center text-md-start ps-md-4 pt-4 pt-md-0 text-primary-600">
                        <% if (collection.goal) { %>
                          <p class="mb-1">課程目的：<%= collection.goal %></p>
                        <% } %>
                        <% if (collection.benefit) { %>
                          <p class="mb-0">課程效益：<%- collection.benefit.replace(/\n/g, '<br>') %></p>
                        <% } %>
                      </div>
                    </div>
                  </div>
                  <div class="modal-body py-7 text-center bg-primary-100">
                    <img class="img-fluid mt-0 mt-md-7 mb-3 mb-md-4 rounded-4" src="<%= url_for('/images/work-image' + collection.id + '.png') %>" alt="modal-image<%= collection.id %>">
                    <h4 class="mb-2 mb-md-3 fs-5 text-primary-800">課程主圖</h4>
                    <!-- <p class="mb-9 text-primary-600">這張圖可替換為課程海報或展示重點內容。</p> -->
                  </div>
                </div>
              </div>
            </div>
          </li>
        <% } %>
      </ul>
    </div>
  </section>

